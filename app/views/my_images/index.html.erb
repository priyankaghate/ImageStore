<p id="notice"><%= notice %></p>

<h1>Listing My Images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Memories</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_images.each do |my_image| %>
      <tr>
        <td><%= my_image.name %></td>
        <td><%= my_image.memories %></td>
        <td><%=image_tag(my_image.picture_url, :width => 100) if my_image.picture.present? %></td>
        <td><%= link_to 'Show', my_image %></td>
        <td><%= link_to 'Edit', edit_my_image_path(my_image) %></td>
        <td><%= link_to 'Destroy', my_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>